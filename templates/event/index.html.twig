{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    <h1>Event index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>HostTeam</th>
                <th>GuestTeam</th>
                <th>HostTeamScores</th>
                <th>GuestTeamScores</th>
                <th>MatchDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for event in events %}
            <tr>
                <td>{{ event.id }}</td>
                <td>{{ event.hostTeam }}</td>
                <td>{{ event.guestTeam }}</td>
                <td>{{ event.hostTeamScores }}</td>
                <td>{{ event.guestTeamScores }}</td>
                <td>{{ event.matchDate ? event.matchDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_event_show', {'id': event.id}) }}">show</a>
                    <a href="{{ path('app_event_edit', {'id': event.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_event_new') }}">Create new</a>
{% endblock %}
